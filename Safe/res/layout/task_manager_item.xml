<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listbg_normal"
    android:orientation="horizontal"
    android:paddingBottom="8.0dip"
    android:paddingRight="5.0dip"
    android:paddingLeft="6.0dip"
    android:paddingTop="8.0dip">
    
    <ImageView 
        android:id="@+id/iv_task_manager_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_social_fb"
        />
    
    <TextView 
        android:id="@+id/tv_task_manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_alignTop="@+id/iv_task_manager_icon"
        android:layout_toRightOf="@id/iv_task_manager_icon"
        android:textColor="#ff000000"
        android:textSize="20.0dip"
        android:text="software"
        />

    <TextView
        android:id="@+id/tv_task_manager_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_task_manager_icon"
        android:layout_alignLeft="@+id/tv_task_manager_name"
        android:text="占用内存:10M"
        android:textColor="#ff000000"
        android:textSize="10.0dip" />
    
</RelativeLayout>
