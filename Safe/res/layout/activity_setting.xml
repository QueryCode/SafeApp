<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.donnie.safe.SettingActivity" >

    <TextView
        android:text="设置中心" 
        style="@style/title"
        />
    
    <View 
        style="@style/view_line"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dip"
       	android:paddingBottom="10dip"
        android:textColor="#ffffff"
        android:text="是否检查版本更新"
        android:textSize="18sp"
        android:layout_weight="1"
        />
    <CheckBox 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:id="@+id/is_update"
        />
    </LinearLayout>
    <View 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@android:color/white"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启归属地服务"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:paddingTop="15dip"
       		android:paddingBottom="10dip"
       		android:layout_weight="1"
            />
        
        <CheckBox 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:id="@+id/open_address"
        />
        
    </LinearLayout>
    <View 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@android:color/white"
        />
    <TextView 
        android:id="@+id/tv_setting_change_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dip"
       	android:paddingBottom="10dip"
        android:text="更改来电归属地显示的位置"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

</LinearLayout>
