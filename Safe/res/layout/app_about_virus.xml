<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listbg_normal"
    android:orientation="horizontal"
    android:paddingBottom="8.0dip"
    android:paddingRight="5.0dip"
    android:paddingLeft="6.0dip"
    android:paddingTop="8.0dip">
    
    <ImageView 
        android:id="@+id/iv_virus_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_social_fb"
        />
    
    <TextView 
        android:id="@+id/tv_virus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/iv_virus_icon"
        android:textColor="#ff000000"
        android:text="software"
        />

    <ImageView
        android:id="@+id/iv_safe_virus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_safe_word"
        android:layout_centerInParent="true"
        android:src="@drawable/true_scan" />

    <TextView
        android:id="@+id/tv_safe_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_virus_name"
        android:layout_alignBottom="@+id/tv_virus_name"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:textColor="#11cd6e"
        android:text="已扫描" />

</RelativeLayout>
