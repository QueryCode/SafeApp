<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.donnie.safe.Setup1ConfigActivity" >

    <TextView
        style="@style/title"
        android:text="1.欢迎使用手机防盗"
        android:gravity="left"
        />

    <View 
        style="@style/view_line"
        />
    <TextView 
        style="@style/text_content_style"
        android:text="您的手机防盗卫士:"
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            />
        
        <TextView 
            android:layout_marginTop="1dip"
            style="@style/text_content_style"
            android:text="sim卡变更报警"
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gps"
            />
        
        <TextView 
            android:layout_marginTop="1dip"
            style="@style/text_content_style"
            android:text="GPS追踪"
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/data"
            />
        
        <TextView 
            android:layout_marginTop="1dip"
            style="@style/text_content_style"
            android:text="远程销毁数据"
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/key"
            />
        
        <TextView 
            android:layout_marginTop="1dip"
            style="@style/text_content_style"
            android:text="远程锁屏"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        >
        <ImageView 
            style="@style/image_start_online_style"
            />
        <ImageView 
           style="@style/image_start_offine_style"
            />
        <ImageView 
           style="@style/image_start_offine_style"
            />
       <ImageView 
           style="@style/image_start_offine_style"
            />
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/pwsecurity"
            />
        <Button 
            style="@style/button_next_style"
            android:onClick="next"
            />
    </RelativeLayout>
</LinearLayout>
